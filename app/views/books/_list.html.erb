<h2>User info</h2>
<div>
  <h3><%= current_user.name %></h3>
  <%= image_tag current_user.get_profile_image(100,100) %>
  <h3><%= current_user.introduction %></h3>
</div>
<p><%= link_to "プロフィール編集", edit_user_path(current_user.id) %></p>

<h2>New books</h2>
<!--エラーメッセージ-->
<% if book_new.errors.any? %>
  <%= book_new.errors.count %>件のエラーが発生しました
  <ul>
    <% book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<!--新規投稿-->
<%= form_with model: book_new do |f| %>
  <h4>Title</h4>
    <%= f.text_field :title %>
  <h4>Opinion</h4>
    <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>