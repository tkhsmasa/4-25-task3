<h1>Books#show</h1>
<p>Find me in app/views/books/show.html.erb</p>


<div>
  <h2>Book detail</h2>
  <p>投稿ユーザー画像：<%= image_tag @book.user.get_profile_image(100,100) %></p>
  <p>title：<%= @book.title %></p>
  <p>説明：<%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "edit", edit_book_path(@book) %>
    <%= link_to "destroy", book_path(@book), method: :delete %>
  <% end %>



</div>