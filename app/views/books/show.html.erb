<% if flash[:notice] %>
  <p id="notice">
   <%= flash[:notice] %>
  </p>
<% end %>
<%= render 'user_info', user: @user %>
<%= render 'new_book', book_new: @book_new %>

<div>
  <h2>Book detail</h2>
  <div>
    <%= link_to user_path(@book.user.id) do %>
      <%= image_tag @book.user.get_profile_image(100,100) %>
      <%= @book.user.name %>
  </div>
    <% end %>
  <p>投稿ユーザー画像： ユーザーネーム：</p>
  <p>title：<%= @book.title %></p>
  <p>説明：<%= @book.body %></p>
  <p>投稿日：<%= @book.created_at.strftime('%Y/%m/%d') %></p>
  <% if @book.user == current_user %>
    <%= link_to "Edit", edit_book_path(@book) %>
    <%= link_to "Destroy", book_path(@book), method: :delete %>
  <% end %>



</div>